#!/bin/sh -x

# RÃ©pertoire de travail
SH_BASE="${SH_BASE:-`pwd`}"

#Scripts de live-helper
. "${LH_BASE:-/usr/share/live-helper}"/functions.sh


lh_clean noautoconfig --all ${@}

rm -f build.log
rm -rf cache .stage
# Remove generated files
rm -f config/binary config/bootstrap config/chroot config/common config/source
rm -rf ${DOC_BASE}/../config/chroot_local-includes/usr/share/doc/satan-manual/html/img/*	

# Remove caching files
rm -rf config/chroot_local-includes/usr/share/framework-3.1 config/chroot_local-includes/usr/share/hydra-5.4-src config/chroot_local-includes/usr/share/libssh-0.2 config/chroot_local-includes/usr/share/netkit
rm -f config/chroot_local-includes/usr/share/hydra-libssh0.2.patch
# Remove empty directories in config tree
if ls config/*/ > /dev/null 2>&1
then
	rmdir --ignore-fail-on-non-empty config/*/
fi

if [ -d config ]
then
	rmdir --ignore-fail-on-non-empty config
fi

